#ifndef _DATABASE_HEADER_
#define _DATABASE_HEADER_

#define ID_CDLI_MAX_SIZE 7
#define PUBLICATION_MAX_SIZE 100
#define MEASUREMENTS_MAX_SIZE 15
#define YEAR_MAX_SIZE 100
#define PROVENIENCE_MAX_SIZE 100
#define PERIOD_MAX_SIZE 100
#define GENRE_MAX_SIZE 100
#define SUBGENRE_MAX_SIZE 100
#define COLLECTION_MAX_SIZE 100

typedef struct{    
    int id;
    char[ID_CDLI_MAX_SIZE] id_cdli;
    char[PUBLICATION_MAX_SIZE] publication;
    char[MEASUREMENTS_MAX_SIZE] measurements;
    char[YEAR_MAX_SIZE] year;
    char[PROVENIENCE_MAX_SIZE] provenience;
    char[PERIOD_MAX_SIZE] period;
    char[GENRE_MAX_SIZE] genre;
    char[SUBGENRE_MAX_SIZE] subgenre;
    char[COLLECTION_MAX_SIZE] collection;
} Tablet;

char* getXmlFromQuery(char*);

#endif
